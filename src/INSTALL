# Fetch modules
git submodule update --init --recursive

# warp-rnnt >= 0.7.1
cd warp-rnnt/pytorch_binding/
git checkout -t origin/dev
python setup.py install
cd ../../

# warp-rna >= 0.3.0
cd warp-rna/pytorch_binding/
python setup.py install
cd ../../

# gather >= 0.2.1
cd torch-gather/
python setup.py install
cd ../

# ctcdecode >= 1.0.3
cd ctcdecode/
# this would take some time since ctcdecode requires 
# ... downloading extra files (depending on your network.)
python setup.py install
cd ../
