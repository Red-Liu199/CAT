{
    "decoder": {
        "type": "CausalTransformer",
        "kwargs": {
            "attn_dropout": 0.1,
            "dim_hid": 256,
            "num_classes": 1024,
            "num_head": 8,
            "num_layers": 12
        }
    },
    "scheduler": {
        "type": "SchedulerTransformer",
        "optimizer": {
            "type": "Adam",
            "use_zero": true,
            "kwargs": {
                "lr": 0.001,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-06
            }
        },
        "kwargs": {
            "d_model": 256,
            "epoch_max": 100,
            "peak_factor": 1.0,
            "warmup_steps": 5000,
            "reverse_metric_direc": true
        }
    }
}