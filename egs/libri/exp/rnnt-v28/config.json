{
    "specaug_config": {
        "freq_mask_width_range": 0.34,
        "num_freq_mask": 2,
        "num_time_mask": 10,
        "time_mask_width_range": 0.05,
        "apply_time_warp": false
    },
    "transducer": {
        "compact": true,
        "fused": true
    },
    "joint": {
        "kwargs": {
            "num_classes": 1024,
            "odim_decoder": 640,
            "odim_encoder": 256
        },
        "type": "JointNet"
    },
    "encoder": {
        "type": "ConformerNet",
        "kwargs": {
            "conv": "conv2d",
            "d_head": -1,
            "dropout": 0.1,
            "hdim": 256,
            "idim": 80,
            "kernel_size": 32,
            "num_cells": 16,
            "num_classes": 1024,
            "num_heads": 4
        }
    },
    "decoder": {
        "type": "LSTMPredictNet",
        "kwargs": {
            "hdim": 640,
            "num_classes": 1024,
            "num_layers": 1,
            "variational_noise": [
                0.0,
                0.075
            ]
        }
    },
    "scheduler": {
        "type": "SchedulerTransformer",
        "kwargs": {
            "d_model": 256,
            "epoch_max": 200,
            "peak_factor": 5.0,
            "reverse_metric_direc": true,
            "warmup_steps": 10000
        },
        "optimizer": {
            "type": "Adam",
            "use_zero": true,
            "kwargs": {
                "lr": 0.0003,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-06
            }
        }
    }
}
