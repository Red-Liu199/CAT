    "scheduler": {
        "type": "SchedulerTransformer",
        "optimizer": {
            "type_optim": "Adam",
            "kwargs": {
                "lr": 3e-4,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-6
            }
        },
        "kwargs": {
            "peak_factor": 5.0,
            "d_model": 144,
            "warmup_steps": 1e4,
            "epoch_max": 84,
            "reverse_metric_direc": true
        }
    }
