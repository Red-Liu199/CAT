{
    "specaug_config": {
        "freq_mask_width_range": 0.15,
        "num_freq_mask": 2,
        "num_time_mask": 2,
        "time_mask_width_range": 0.05,
        "time_warp_window": 0.2
    },
    "encoder": {
        "type": "ConformerNet",
        "kwargs": {
            "num_cells": 16,
            "idim": 80,
            "hdim": 144,
            "conv_multiplier": 144,
            "num_classes": 4096,
            "delta_feats": false
        }
    },
    "decoder": {
        "type": "LSTMPredictNet",
        "kwargs": {
            "num_classes": 4096,
            "hdim": 320,
            "num_layers": 1,
            "norm": true
        }
    },
    "joint": {
        "type": "JointNet",
        "kwargs": {
            "odim_encoder": 144,
            "odim_decoder": 320,
            "num_classes": 4096
        }
