{
    "specaug_config": {
        "freq_mask_width_range": 0.34,
        "num_freq_mask": 2,
        "num_time_mask": 10,
        "time_mask_width_range": 0.05,
        "apply_time_warp": false
    },
    "ctc-trainer": {
        "use_crf": true,
        "lamb": 0.01,                                                                                                                                             
        "den-lm": "../../tools/CAT/egs/libri/data/den_meta/den_lm.fst"
    },
    "encoder": {
        "type": "ConformerNet",
        "kwargs": {
            "conv": "conv2d",
            "dropout": 0.1,
            "hdim": 512,
            "idim": 80,
            "kernel_size": 32,
            "num_cells": 17,
            "num_classes": 72,
            "num_heads": 8,
            "with_head": true
        }
    },
    "scheduler": {
        "type": "SchedulerTransformer",
        "kwargs": {
            "d_model": 512,
            "epoch_max": 200,
            "peak_factor": 5.0,
            "reverse_metric_direc": true,
            "warmup_steps": 10000
        },
        "optimizer": {
            "type": "Adam",
            "use_zero": true,
            "kwargs": {
                "lr": 0.0003,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-06
            }
        }
    }
}