{
    "type": "object",
    "required": [
        "encoder",
        "decoder",
        "joint",
        "scheduler"
    ],
    "properties": {
        "specaug_config": {
            "description": "Configuration of SpecAug",
            "type": "object",
            "properties": {
                "time_warp_window": {
                    "type": "number",
                    "examples": [
                        0.2
                    ]
                },
                "freq_mask_width_range": {
                    "type": "number",
                    "examples": [
                        0.15
                    ]
                },
                "num_freq_mask": {
                    "type": "number",
                    "examples": [
                        2
                    ]
                },
                "time_mask_width_range": {
                    "type": "number",
                    "examples": [
                        0.05
                    ]
                },
                "num_time_mask": {
                    "type": "number",
                    "examples": [
                        2
                    ]
                }
            }
        },
        "encoder": {
            "description": "Configuration of Transducer transcription network",
            "type": "object",
            "required": [
                "type",
                "kwargs"
            ],
            "properties": {
                "freeze": {
                    "type": "boolean"
                },
                "pretrained": {
                    "type": "string"
                },
                "type": {
                    "description": "Class of Module",
                    "type": "string",
                    "examples": [
                        "LSTM",
                        "BLSTM",
                        "VGGBLSTM",
                        "VGGLSTM",
                        "LSTMrowCONV",
                        "TDNN_LSTM",
                        "BLSTMN",
                        "ConformerNet",
                        "ConformerLSTM"
                    ]
                },
                "kwargs": {
                    "description": "key word arguments passed into class __init__()",
                    "required": [
                        "num_classes"
                    ],
                    "type": "object",
                    "properties": {
                        "idim": {
                            "type": "number"
                        },
                        "hdim": {
                            "type": "number"
                        },
                        "num_cells": {
                            "type": "number"
                        },
                        "conv_multiplier": {
                            "type": "number"
                        },
                        "num_classes": {
                            "type": "number"
                        },
                        "delta_feats": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "decoder": {
            "description": "Configuration of Transducer predition network",
            "type": "object",
            "required": [
                "type",
                "kwargs"
            ],
            "properties": {
                "freeze": {
                    "type": "boolean"
                },
                "pretrained": {
                    "type": "string"
                },
                "type": {
                    "description": "Class of Module",
                    "type": "string",
                    "examples": [
                        "LSTMPredictNet",
                        "PlainPN"
                    ]
                },
                "kwargs": {
                    "description": "key word arguments passed into class __init__()",
                    "required": [
                        "num_classes"
                    ],
                    "type": "object",
                    "properties": {
                        "idim": {
                            "type": "number"
                        },
                        "hdim": {
                            "type": "number"
                        },
                        "num_layers": {
                            "type": "number"
                        },
                        "dropout": {
                            "type": "number"
                        },
                        "num_classes": {
                            "type": "number"
                        }
                    }
                }
            }
        },
        "joint": {
            "description": "Configuration of Transducer joint network",
            "type": "object",
            "required": [
                "type",
                "kwargs"
            ],
            "properties": {
                "type": {
                    "description": "Class of Module",
                    "type": "string",
                    "examples": [
                        "JointNet",
                        "ConvJointNet"
                    ]
                },
                "kwargs": {
                    "description": "key word arguments passed into class __init__()",
                    "required": [
                        "odim_encoder",
                        "odim_decoder",
                        "num_classes"
                    ],
                    "type": "object",
                    "properties": {
                        "odim_encoder": {
                            "type": "number"
                        },
                        "odim_decoder": {
                            "type": "number"
                        },
                        "num_classes": {
                            "type": "number"
                        }
                    }
                }
            }
        },
        "scheduler": {
            "description": "Configuration of scheduler and optimizer",
            "type": "object",
            "required": [
                "type",
                "optimizer",
                "kwargs"
            ],
            "properties": {
                "type": {
                    "description": "Class of Module",
                    "type": "string",
                    "examples": [
                        "Scheduler",
                        "SchedulerEarlyStop",
                        "SchedulerFixedStop",
                        "SchedulerWarmupMileStone",
                        "SchedulerTransformer",
                        "SchedulerTransformerEarlyStop",
                        "SchedulerIterAnnealing",
                        "SchedulerCosineAnnealing"
                    ]
                },
                "optimizer": {
                    "description": "optimizer class, should be in torch.optim",
                    "type": "object",
                    "properties": {
                        "type_optim": {
                            "type": "string",
                            "examples": [
                                "Adam",
                                "SGD"
                            ]
                        },
                        "kwargs": {
                            "description": "key word arguments passed into optimizer __init__()",
                            "type": "object",
                            "required": [
                                "lr"
                            ],
                            "properties": {
                                "lr": {
                                    "type": "number"
                                },
                                "betas": {
                                    "type": "array",
                                    "items": {
                                        "type": "number"
                                    }
                                },
                                "weight_decay": {
                                    "type": "number"
                                },
                                "momentum": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                },
                "kwargs": {
                    "description": "key word arguments passed into scheduler __init__()",
                    "type": "object",
                    "properties": {
                        "peak_factor": {
                            "type": "number"
                        },
                        "d_model": {
                            "type": "number"
                        },
                        "warmup_steps": {
                            "type": "number"
                        },
                        "lr_stop": {
                            "type": "number"
                        },
                        "gamma": {
                            "type": "number"
                        },
                        "reverse_metric_direc": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}