{
    "trainer": {
        "use_crf": true,
        "lamb": 0.1,
        "den-lm": "exp/asr-ctc-crf/den_lm.fst"
    },
    "encoder": {
        "type": "LSTM",
        "kwargs": {
            "bidirectional": true,
            "dropout": 0.2,
            "hdim": 512,
            "idim": 80,
            "n_layers": 2,
            "num_classes": 8,
            "with_head": true
        }
    },
    "scheduler": {
        "type": "SchedulerCosineAnnealing",
        "kwargs": {
            "min_lr": 0.0001,
            "stop_step": 200
        },
        "optimizer": {
            "type": "Adam",
            "kwargs": {
                "lr": 0.001
            },
            "zeroredundancy": true
        }
    }
}