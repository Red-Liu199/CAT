{
    "data": {
        "train": "yesno",
        "dev": "yesno",
        "test": "yesno",
        "filter": "10:2000",
        "lang": "en"
    },
    "tokenizer": {
        "type": "SentencePieceTokenizer",
        "property": {
            "model_type": "char",
            "use_all_vocab": true,
            "bos_id": 0,
            "unk_id": 1,
            "model_prefix": "sentencepiece/yesno_word/spm",
            "vocab_size": 8
        }
    },
    "train": {
        "amp": true,
        "batch-size": 1,
        "check-freq": 100,
        "databalance": true
    },
    "inference": {
        "decode": {
            "beam-size": 16,
            "nj": 4,
            "cpu": true
        },
        "er": {
            "mode": "wer",
            "oracle": false
        }
    }
}