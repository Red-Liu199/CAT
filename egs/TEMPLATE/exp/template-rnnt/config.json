{
    "decoder": {
        "type": "LSTM",
        "kwargs": {
            "hdim": 256,
            "num_classes": 4,
            "with_head": false
        }
    },
    "encoder": {
        "type": "LSTM",
        "kwargs": {
            "bidirectional": true,
            "hdim": 256,
            "idim": 80,
            "dropout": 0.0,
            "n_layers": 2,
            "num_classes": 4,
            "with_head": false
        }
    },
    "joiner": {
        "type": "JointNet",
        "kwargs": {
            "odim_enc": 512,
            "odim_pred": 256,
            "num_classes": 4
        }
    },
    "transducer": {
        "compact": true
    },
    "scheduler": {
        "type": "SchedulerLinearAnnealing",
        "kwargs": {
            "min_step": 50,
            "stop_lr": 1e-05,
            "stop_step": 200
        },
        "optimizer": {
            "zeroredundancy": true,
            "type": "Adam",
            "kwargs": {
                "lr": 0.001
            }
        }
    }
}