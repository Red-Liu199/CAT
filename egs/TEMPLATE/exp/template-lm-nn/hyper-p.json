{
    "data": {
        "train": "data/local-lm/ptb.train.txt",
        "dev": "data/local-lm/ptb.valid.txt",
        "test": [
            "data/local-lm/ptb.test.txt",
            "data/local-lm/ptb.valid.txt"
        ],
        "text_processing": {
            "truncate": 32
        }
    },
    "tokenizer": {
        "type": "SentencePieceTokenizer",
        "property": {
            "model_type": "word",
            "vocab_size": 10000,
            "use_all_vocab": true,
            "model_prefix": "sentencepiece/ptb-word/spm"
        }
    },
    "train": {
        "bin": "cat.lm.train",
        "option": {
            "amp": true,
            "batch_size": 64,
            "check-freq": 100
        }
    },
    "inference": {
        "avgmodel": {
            "mode": "last",
            "num": 2
        }
    }
}