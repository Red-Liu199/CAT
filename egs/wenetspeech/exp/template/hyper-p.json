{
    "data": {
        "train": "train_m",
        "dev": "dev",
        "test": [
            "test_meeting",
            "test_net"
        ],
        "filter": ":2000",
        "text_processing": {
            "truncate": 32
        },
        "lang": "zh-cn"
    },
    "sp": {
        "model_type": "char",
        "add_dummy_prefix": false,
        "use_all_vocab": true,
        "model_prefix": "sentencepiece/wenetspeech_char/spm",
        "vocab_size": 5147
    },
    "train": {
        "batch_size": 512,
        "grad-norm": 5.0,
        "databalance": true,
        "checkall": true,
        "amp": true
    },
    "inference": {
        "avgmodel": {
            "mode": "best",
            "num": 10
        },
        "subsample": 4,
        "decode": {
            "algo": "rna",
            "beam_size": 16,
            "cpu": true,
            "rescore": false,
            "nj": 80
        },
        "er": {
            "mode": "cer",
            "oracle": true
        }
    }
}