{
    "decoder": {
        "type": "TRFLM",
        "kwargs": {
            "noise_rate": 1,
            "method": "dnce",
            "energy_func": "sumtargetlogit",
            "f_linfo": "exp/lm/TRF-LM-DNCE/linfo.pkl",
            "config_ebm_model": "exp/lm/TRF-LM-DNCE/config_trf.json",
            "config_noise_model": "exp/lm/TRF-LM-DNCE/config_noise.json",
            "alpha": 1,
            "with_end_mark": false,
            "tokenizer_path": "exp/lm/TRF-LM-DNCE/tokenizer.tknz",
            "bert_tokenizer": true
        }
    },
    "scheduler": {
        "type": "SchedulerNoam",
        "kwargs": {
            "dim_model": 768,
            "peak_factor": 0.16,
            "warmup_step": 10000,
            "stop_step": 30000
        },
        "optimizer": {
            "type": "Adam",
            "zeroredundancy": true,
            "kwargs": {
                "lr": 0.0008
            }
        }
    }
}