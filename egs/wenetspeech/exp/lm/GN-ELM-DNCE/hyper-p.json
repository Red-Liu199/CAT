{
    "data": {
        "train": "data/wenet/train.txt",
        "dev": "data/wenet/dev.txt",
        "test": [
            "data/wenet/test_net.txt",
            "data/wenet/test_meeting.txt"
        ]
    },
    "tokenizer": {
        "type": "PretrainedTokenizer",
        "option-init": {
            "name": "BertTokenizer",
            "path": "bert-base-chinese"
        }
    },
    "env": {
        "CUDA_VISIBLE_DEVICES": "0, 1, 2, 3",
        "TORCH_DISTRIBUTED_DEBUG": "INFO"
    },
    "train": {
        "bin": "cat.lm.trf.train",
        "option": {
            "amp": true,
            "batch_size": 512,
            "check-freq": 500,
            "debug": false,
            "grad-norm": 5.0
        }
    },
    "inference": {
        "avgmodel": {
            "mode": "best",
            "num": 3
        },
        "infer": {
            "bin": "cat.lm.rescore",
            "option": {
                "nbestlist": "data/wenet/dev.nbest",
                "save_lm_nbest": "exp/GN-ELM-DNCE/rescore/score_dev.nbest",
                "verbose": true
            }
        }
    },
    "commit": "b271141e8ea89f95d174705a57ae7491414b6065"
}