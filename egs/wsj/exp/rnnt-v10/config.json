{
    "specaug_config": {
        "freq_mask_width_range": 0.34,
        "num_freq_mask": 2,
        "num_time_mask": 5,
        "time_mask_width_range": 0.05
    },
    "transducer": {
        "compact": true,
        "fused": true,
        "time_reduction": 2
    },
    "encoder": {
        "type": "ConformerNet",
        "kwargs": {
            "num_cells": 16,
            "idim": 80,
            "hdim": 144,
            "conv_multiplier": 144,
            "num_classes": 1024,
            "delta_feats": false
        }
    },
    "decoder": {
        "type": "LSTMPredictNet",
        "kwargs": {
            "num_classes": 1024,
            "hdim": 320,
            "num_layers": 1,
            "variational_noise": [
                0.0,
                0.075
            ],
            "classical": false
        }
    },
    "joint": {
        "type": "JointNet",
        "kwargs": {
            "odim_encoder": 144,
            "odim_decoder": 320,
            "hdim": 320,
            "num_classes": 1024,
            "classical": false
        }
    },
    "scheduler": {
        "type": "SchedulerTransformerEarlyStop",
        "optimizer": {
            "type_optim": "Adam",
            "use_zero": true,
            "kwargs": {
                "lr": 3e-4,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-6
            }
        },
        "kwargs": {
            "peak_factor": 5.0,
            "d_model": 144,
            "warmup_steps": 1e4,
            "lr_stop": 1e-6,
            "gamma": 0.1,
            "num_ahead": 3,
            "reverse_metric_direc": true
        }
    }
}