{
    "specaug_config": {
        "freq_mask_width_range": 0.34,
        "num_freq_mask": 2,
        "num_time_mask": 5,
        "time_mask_width_range": 0.1,
        "apply_time_warp": false
    },
    "transducer": {
        "compact": true,
        "fused": true,
        "time_reduction": 2
    },
    "encoder": {
        "type": "ConformerNet",
        "kwargs": {
            "num_cells": 12,
            "idim": 80,
            "hdim": 512,
            "d_head": -1,
            "num_heads": 4,
            "dropout": 0.3,
            "dropout_attn": 0.3,
            "kernel_size": 15,
            "num_classes": 4231
        }
    },
    "decoder": {
        "type": "LSTMPredictNet",
        "kwargs": {
            "num_classes": 4231,
            "hdim": 512,
            "num_layers": 1,
            "variational_noise": [
                0.0,
                0.075
            ]
        }
    },
    "joint": {
        "type": "JointNet",
        "kwargs": {
            "odim_encoder": 512,
            "odim_decoder": 512,
            "hdim": 512,
            "num_classes": 4231
        }
    },
    "scheduler": {
        "type": "SchedulerTransformer",
        "optimizer": {
            "type":"Adam",
            "use_zero": true,
            "kwargs": {
                "lr": 3e-4,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-6
            }
        },
        "kwargs": {
            "peak_factor": 1.0,
            "d_model": 512,
            "warmup_steps": 25000,
            "epoch_max": 80,
            "reverse_metric_direc": true
        }
    }
}
