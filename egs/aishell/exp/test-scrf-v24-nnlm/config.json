{
    "specaug": {
        "freq_mask_width_range": 0.34,
        "num_freq_mask": 2,
        "num_time_mask": 10,
        "time_mask_width_range": 0.05,
        "apply_time_warp": false
    },
    "trainer": {
        "n_samples": 32,
        "num_aux_weight": 0.05,
        "compute_gradient_via_y": true,
        "lm": {
            "weight": 1.0,
            "config": "exp/lm/lm-v1/config.json",
            "check": "exp/lm/lm-v1/check/best-5.pt"
        },
        "decoder": {
            "alpha": 0.3,
            "kenlm": "exp/lm/lm-v5/5gram.bin",
            "beam_size": 16,
            "num_classes": 4232
        }
    },
    "encoder": {
        "type": "ConformerNet",
        "kwargs": {
            "num_cells": 12,
            "idim": 80,
            "hdim": 512,
            "conv": "vgg2l",
            "num_heads": 4,
            "dropout": 0.3,
            "dropout_attn": 0.3,
            "kernel_size": 15,
            "num_classes": 4232,
            "with_head": true
        }
    },
    "scheduler": {
        "type": "SchedulerNoam",
        "kwargs": {
            "stop_step": 500000,
            "dim_model": 512,
            "warmup_step": 25000,
            "peak_factor": 1.0
        },
        "optimizer": {
            "type": "Adam",
            "kwargs": {
                "lr": 0.0003,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-06
            }
        }
    }
}
