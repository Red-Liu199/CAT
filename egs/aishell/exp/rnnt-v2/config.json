{
    "specaug_config": {
        "freq_mask_width_range": 0.34,
        "num_freq_mask": 2,
        "num_time_mask": 10,
        "time_mask_width_range": 0.05
    },
    "transducer": {
        "compact": true,
        "fused": true,
        "time_reduction": 2
    },
    "encoder": {
        "type": "ConformerNet",
        "kwargs": {
            "num_cells": 16,
            "idim": 80,
            "hdim": 144,
            "d_head": -1,
            "num_heads": 4,
            "num_classes": 3500
        }
    },
    "decoder": {
        "type": "LSTMPredictNet",
        "kwargs": {
            "num_classes": 3500,
            "hdim": 320,
            "num_layers": 1,
            "variational_noise": [
                0.0,
                0.075
            ]
        }
    },
    "joint": {
        "type": "JointNet",
        "kwargs": {
            "odim_encoder": 144,
            "odim_decoder": 320,
            "hdim": 320,
            "num_classes": 3500
        }
    },
    "scheduler": {
        "type": "SchedulerTransformer",
        "optimizer": {
            "type_optim": "Adam",
            "use_zero": true,
            "kwargs": {
                "lr": 3e-4,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-6
            }
        },
        "kwargs": {
            "peak_factor": 1.0,
            "d_model": 144,
            "warmup_steps": 5e3,
            "epoch_max": 50,
            "reverse_metric_direc": true
        }
    }
}
