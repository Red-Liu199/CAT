{
    "specaug_config": {
        "freq_mask_width_range": 0.34,
        "num_freq_mask": 2,
        "num_time_mask": 5,
        "time_mask_width_range": 0.1,
        "time_warp_window": 0.2
    },
    "encoder": {
        "type": "ConformerNet",
        "kwargs": {
            "num_cells": 12,
            "idim": 80,
            "hdim": 512,
            "conv": "vgg2l",
            "num_heads": 4,
            "dropout": 0.3,
            "dropout_attn": 0.3,
            "kernel_size": 15,
            "num_classes": 4232,
            "with_head": true
