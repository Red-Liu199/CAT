{
    "data": {
        "train": "data/aishell/train.txt",
        "dev": "data/aishell/dev.txt",
        "test": [
            "data/aishell/test.txt"
        ]
    },
    "tokenizer": {
        "type": "PretrainedTokenizer",
        "option-init": {
            "name": "BertTokenizer",
            "path": "bert-base-chinese"
        }
    },
    "train": {
        "bin": "cat.lm.train_mlm",
        "option": {
            "amp": true,
            "batch_size": 512,
            "check-freq": 100,
            "debug": false,
            "verbose": true
        }
    },
    "env": {
        "CUDA_VISIBLE_DEVICES": "0, 1, 2, 3"
    },
    "inference": {
        "avgmodel": {
            "mode": "best",
            "num": 2
        },
        "infer": {
            "bin": "cat.lm.rescore",
            "option": {
                "alpha": 0.2,
                "beta": 0,
                "nbestlist": "data/aishell/outd.nbest",
                "save_lm_nbest": "exp/lm/mlm-bert/rescore/score-outd.nbest"
            }
        }
    },
    "commit": "b271141e8ea89f95d174705a57ae7491414b6065"
}