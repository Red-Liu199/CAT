{
    "decoder": {
        "type": "EBM",
        "kwargs": {
            "noise_rate": 1,
            "method": "dnce",
            "energy_func": "hidden2scalar-sum",
            "config_trf_model": "exp/debm/config_ebm.json",
            "config_noise_model": "exp/debm/config_noise.json",
            "tokenizer_path": "exp/debm/tokenizer.tknz",
            "bert_tokenizer": true
        }
    },
    "scheduler": {
        "type": "SchedulerNoam",
        "kwargs": {
            "dim_model": 768,
            "peak_factor": 0.3,
            "warmup_step": 5000,
            "stop_step": 2000
        },
        "optimizer": {
            "type": "Adam",
            "zeroredundancy": true,
            "kwargs": {
                "lr": 0.001
            }
        }
    }
}